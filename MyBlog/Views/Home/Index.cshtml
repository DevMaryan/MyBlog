@model MyBlog.ViewModels.BlogIndexDataModel;
@{
    ViewBag.Title = "My Blog Page";
}
@section Style{ 
    <link href="~/css/sidebar.css" rel="stylesheet" />
}

<div class="container-fluid" id="big-container">

    @foreach (var article in @Model.IndexModels)
    {
        <a asp-controller="Home" asp-action="Detail" asp-route-id="@article.Id" style="text-decoration:none;color:#666;">
            <div class="row">
                <div class="col-12 mt-3">
                    <div class="card">
                        <div class="card-horizontal">
                            <div class="img-square-wrapper">
                                <div class="card">
                                    <img class="card-img-left" src="@article.ImageUrl" alt="Card image cap" style="height:300px;object-fit:cover;">
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title"><b>@article.Title</b></h5>
                                    <p class="card-text">@article.Content</p>
                                </div>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">@article.Author</small>
                                <small class="text-muted">@article.Date</small>
                                <small class="text-muted"><i class="far fa-eye"></i> @article.Views</small>
                                <a href="/Home/Detail/@article.Id"><button class="btn btn-primary">Read More</button></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    }
    <div class="side-bar-left">
        <partial name="SidebarPartial" for="@Model.SidebarData" />
    </div>



</div>


