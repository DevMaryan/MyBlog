@model List<MyBlog.Models.Blog>
@{
    ViewBag.Title = "My Blog Page";
}

<div class="container-fluid">

    @foreach (var article in @Model)
    {
    <a asp-controller="Home" asp-action="Detail" asp-route-id="@article.Id" style="text-decoration:none;color:#666;">
        <div class="row">
            <div class="col-12 mt-3">
                <div class="card">
                    <div class="card-horizontal">
                        <div class="img-square-wrapper">
                            <div class="card">
                                <img class="card-img-left" src="@article.ImageUrl" alt="Card image cap">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@article.Title</h5>
                                <p class="card-text">@article.Content</p>
                            </div>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">@article.Author</small>
                            <small class="text-muted">@article.Date</small>
                            <a href="/Home/Detail/@article.Id"><button class="btn btn-primary">Read More</button></a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </a>
    }

</div>




