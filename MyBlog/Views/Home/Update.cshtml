@{
    ViewBag.Title = "Update";
}

<div class="container d-flex justify-content-center">
    <div style="width:600px;">
        <form>
            <div class="form-group">
                <label for="exampleFormControlInput1">Article ID</label>
                <input type="number" class="form-control" id="exampleFormControlInput1">
            </div>
            <div class="form-group">
                <label for="exampleFormControlInput1">Article Title</label>
                <input type="text" class="form-control" id="exampleFormControlInput1">
            </div>
            <div class="form-group">
                <label for="exampleFormControlInput1">Article ImageUrl</label>
                <input type="text" class="form-control" id="exampleFormControlInput1">
            </div>
            <div class="form-group">
                <label for="exampleFormControlInput1">Article Author</label>
                <input type="text" class="form-control" id="exampleFormControlInput1">
            </div>

            <div class="form-group">
                <label for="exampleFormControlTextarea1">Article Content</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>

            <div class="form-group">
                <label for="exampleFormControlInput1">Article Date</label>
                <input type="date" class="form-control" id="exampleFormControlInput1">
            </div>
            <button type="submit" class="btn btn-primary btn-lg">Update</button>
        </form>
    </div>

</div>