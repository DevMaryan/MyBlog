@model MyBlog.ViewModels.BlogDetailModel;
@{
    ViewBag.Title = @Model.Title;
}
<style>
    #comment_btn {
        display: none;
    }
</style>
<div id="container3">
    <div id="wrapper">
        <!-- SINGLE MOVIE CARD-->
        <div class="single-card">
            <div class="flx">
                <img class="single-card-img" src="@Model.ImageUrl" style="width:100%;height:300px;object-fit:cover; border-radius:3px 3px 0px 0px;">
                <div class="single-card-genre">
                    <div class="card-footer">
                        <p class='single-card-title'><b>@Model.Title</b></p>
                        <small class="text-muted"><b>Views</b> @Model.Views |</small>
                        <small class="text-muted"><b>Author</b> @Model.Author |</small>
                        <small class="text-muted">Created - @Model.Date | </small>
                        @if (Model.DateModified != null)
                        {
                            <small class="text-muted">Modified - @Model.DateModified</small>
                        }
                        else
                        {
                            <small class="text-muted"></small>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (Model.Like)
                            {
                                <a href="/Home/Like/@Model.Id"><i class="fas fa-heart fa-2x"></i></a>
                            }
                            else
                            {
                                <a href="/Home/Like/@Model.Id"><i class="far fa-heart fa-2x"></i></a>
                            }
                        }

                    </div>

                </div>
            </div>
            <div class="single-card-description">
                <br>
                <p>@Model.Content</p>
                <br>
            </div>

            <!-- Comment Section-->
            <!-- Comment POST-->
            @if (User.Identity.IsAuthenticated)
            { 
                <form asp-controller="Comments" asp-action="Add" method="POST" id="comment-form">
                    <input type="text" name="articleId" value="@Model.Id" hidden />
                    <div class="form-group">
                        <textarea type="text" name="comment" onkeypress="CheckLength();" class="form-control" cols="20" rows="3" required id="textarea"></textarea>
                    </div>
                    <small id="msg_small" style="display:block;color:red;"></small>
                    <button id="comment_btn" type="submit" class="btn btn-primary">Add Comment</button>
                </form>
            }
            @if (Model.Comments.Count() > 0)
            {
                @foreach (var comment in Model.Comments.OrderByDescending(x => x.DateCreated))
                {
                    <div class="container badge-light m-1 p-2">
                        <div class="row">
                            <div class="col-12 text-info row ml-2">
                                @comment.Username -
                                @comment.DateCreated
                                @if (User.Identity.IsAuthenticated)
                                {
                                    @if (User.FindFirst("Username").Value == comment.Username)
                                    {
                                        <a asp-controller="Comments" asp-action="Delete" asp-route-id="@comment.Id"><div class="text-danger p-1"><i class="fas fa-trash-alt"></i></div></a>
                                    }
                                }
                            </div>
                        </div>
                        <p class="comment-message p-3">@comment.Message</p>
                    </div>
                }
            }
            else
            {
                <p>No Comments</p>
            }


        </div>
        <br>
        <a href="/Home/Index" class="btn btn-outline-primary">Back</a>
    </div>
</div>

@section Scripts{ 
    <script src="~/js/comment_validator.js"></script>
}