@model MyBlog.ViewModels.BlogDetailModel;
@{
    ViewBag.Title = @Model.Title;
}
<div id="container3">
    <div id="wrapper">
        <!-- SINGLE MOVIE CARD-->
        <div class="single-card">
            <div class="flx">
                <img class="single-card-img" src="@Model.ImageUrl" style="width:100%;height:300px;object-fit:cover; border-radius:3px 3px 0px 0px;">
                <div class="single-card-genre">
                    <div class="card-footer">
                        <p class='single-card-title'><b>@Model.Title</b></p>
                        <small class="text-muted"><b>Author</b> @Model.Author |</small>
                        <small class="text-muted">Created - @Model.Date | </small>
                        @if (Model.DateModified != null)
                        {
                            <small class="text-muted">Modified - @Model.DateModified</small>
                        }
                        else
                        {
                            <small class="text-muted"></small>
                        }
                    </div>

                </div>
            </div>
            <div class="single-card-description">
                <br>
                <p>@Model.Content</p>
                <br>
            </div>
        </div>
        <br>
        <a href="/Home/Index" class="btn btn-outline-primary">Back</a>
    </div>
</div>